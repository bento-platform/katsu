    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading"
            ],
            "django": true
        },
        {
            "name": "Python: Attach Debugger",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "0.0.0.0"
        },
    ]
  }